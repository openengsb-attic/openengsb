<assembly>
  <id>bundle</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <!-- Expanded Karaf Runtime -->
    <fileSet>
      <directory>target/framework/openengsb-${openengsb.version}</directory>
      <outputDirectory>/</outputDirectory>
      <excludes>
        <exclude>/bin/*</exclude>
        <exclude>CHANGELOG</exclude>
        <exclude>/etc/org.apache.karaf.features.cfg</exclude>
      </excludes>
    </fileSet>
    <!-- Copy over bin/karaf separately to get the correct file mode -->
    <fileSet>
      <directory>target/framework/openengsb-${openengsb.version}/bin</directory>
      <outputDirectory>/bin/</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
    <!-- Copy openengsb system repo -->
    <fileSet>
      <directory>target/features-repo</directory>
      <outputDirectory>system</outputDirectory>
    </fileSet>
    <!-- Copy examples -->
    <fileSet>
      <directory>target/examples</directory>
      <outputDirectory>/examples</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${basedir}/CHANGELOG.md</source>
      <outputDirectory>/</outputDirectory>
      <destName>CHANGELOG</destName>
      <fileMode>0644</fileMode>
      <lineEnding>dos</lineEnding>
    </file>
    <file>
      <source>${basedir}/target/classes/org.apache.karaf.features.cfg</source>
      <outputDirectory>/etc/</outputDirectory>
      <fileMode>0755</fileMode>
    </file>
  </files>
</assembly>

